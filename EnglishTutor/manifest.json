{
    "manifest_version": 2,
    "name": "English Tutor",
    "version": "1.0",
    "description": "This extension will help you learn new English words while you are reading text",
    "icons": {
        "128": "icons/logo.png",
        "48": "icons/logo.png",
        "16": "icons/logo.png" 
    },
    "browser_action": {
        "default_icon": "icons/logo.png",
        "default_popup": "index.html"
    },

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": true
    },

    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]
}